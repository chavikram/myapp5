<h1>Listing sections</h1>
<%= link_to 'Section List(PDF)', sections_path(:format=>'pdf') %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Section officer</th>
      <th>Under secretary</th>
      <th>Director</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= section.section_officer.name %></td>
        <td><%= section.under_secretary.name %></td>
        <td><%= section.director.name %></td>
		<td><%= link_to "Show (PDF)", section_path(section, :format => 'pdf') %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Section', new_section_path %>
