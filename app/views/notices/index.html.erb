<h1>Listing notices</h1>

<table class="table">
  <thead>
    <tr>
      <th>Session</th>
      <th>House diary no</th>
      <th>Answer date</th>
      <th>Subject</th>
      <th>Received date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notices.each do |notice| %>
      <tr>
        <td><%= notice.session.desc %></td>
        <td><%= notice.house_diary_no %></td>
        <td><%= notice.answer_date %></td>
        <td><%= notice.subject %></td>
        <td><%= notice.received_date %></td>
        <td><%= link_to 'Show', notice %></td>
        <td><%= link_to 'Edit', edit_notice_path(notice) %></td>
        <td><%= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notice', new_notice_path %>
