
<h1><%=link_to "Questions(PDF)",questions_path(:format => "pdf")%></h1>
<h1>Listing questions</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Question type</th>
      <th>Notice</th>
      <th>Section</th>
      <th>Question no</th>
      <th>Session</th>
      <th>Subject</th>
      <th>Answer date</th>
      <th>Received date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.question_type.name %></td>
        <td><%= question.notice.house_diary_no %></td>
        <td><%= question.section.name %></td>
        <td><%= question.question_no %></td>
        <td><%= question.session.desc %></td>
        <td><%= question.subject %></td>
        <td><%= question.answer_date %></td>
        <td><%= question.received_date %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

