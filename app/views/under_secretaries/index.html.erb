<h1>Listing under_secretaries</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @under_secretaries.each do |under_secretary| %>
      <tr>
        <td><%= under_secretary.name %></td>
        <td><%= link_to 'Show', under_secretary %></td>
        <td><%= link_to 'Edit', edit_under_secretary_path(under_secretary) %></td>
        <td><%= link_to 'Destroy', under_secretary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

